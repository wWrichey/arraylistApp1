<Window x:Class="arraylistApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arraylistApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addData" Content="Add" HorizontalAlignment="Left" Height="54" Margin="76,280,0,0" VerticalAlignment="Top" Width="175" Click="Button_Click_1" FontSize="24"/>
        <Button x:Name="removeData" Content="Remove" HorizontalAlignment="Center" Height="54" Margin="0,280,0,0" VerticalAlignment="Top" Width="172" Click="Button_Click_2" FontSize="24"/>
        <Button x:Name="showAllData" Content="Show all" HorizontalAlignment="Left" Height="54" Margin="553,280,0,0" VerticalAlignment="Top" Width="171" Click="Button_Click" FontSize="24"/>
        <TextBox x:Name="txtShowAll" HorizontalAlignment="Center" Height="42" Margin="0,129,0,0" TextWrapping="Wrap" Text="Put your things" VerticalAlignment="Top" Width="648" FontSize="24" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
